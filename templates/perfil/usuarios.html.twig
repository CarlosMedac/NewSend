{% for seguidos in seguidos %}
 <div class="tarjetaCompletaUsuario">
    <div class="perfilImg">
    {% if seguidos[0].img == "" %}
        <div onclick="visitarPerfil({{seguidos[0].id}})" class="foto_perfilBuscador" style="background-image: url(../../uploads/img/perfil_defecto.png)">
            <input type="text" value="../../uploads/img/perfil_defecto.png" id="src" hidden>
        </div>   
    {% else %}
        <div onclick="visitarPerfil({{seguidos[0].id}})" class="foto_perfilBuscador" style="background-image: url(../../uploads/img/{{seguidos[0].img}})">
            <input type="text" value="../../uploads/img/{{seguidos[0].img}}" id="src" hidden>
        </div>
    {% endif %}
        <div class="aux" style="height: 77%;" onclick="irMensaje({{seguidos[0].id}})"></div>
    </div>
    <div id="contenido" >

        <div id="cabeceraBuscador">
            <div class="nombre_followContenedor">

                <div class="nombre" onclick="visitarPerfil({{seguidos[0].id}})"><b >{{seguidos[0].username}}</b></div>
                <div class="followContenedor">
                    {% if user.id == usuario.id %}
                        {% set follow = FollowUsuario(user.Id , seguidos[0].id) %}
                            {% if follow %}
                                <a class="follow" id="seguir{{seguidos[0].id}}" onclick="SeguirSeguidos({{user.id}},{{seguidos[0].id}})">Seguir</a>
                            {% else %}
                                <a class="unfollow" id="seguir{{seguidos[0].id}}" onclick="DejarSeguirSeguidos({{user.id}},{{seguidos[0].id}})"><i class="bi bi-person-check-fill"></i></a>
                            {% endif %}
                    {% endif %}
                </div> 
            </div>
            <div class="descripcion" onclick="visitarPerfil({{seguidos[0].id}})">{{seguidos[0].description}}</div>
        </div>
    </div>        
</div>    
{% endfor %}
<script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="../../js/img.js"></script>

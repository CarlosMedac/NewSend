{% for mensajes in mensajes %}
<div class="mensaje">
    <div><div class="foto_perfil" style="background-image: url(uploads/img/perfil_defecto.png)"></div></div>
    <div class="contenido">
        <div class="men_cabecera">
            <div class="nombre"><b>{{mensajes.nombreuser}}</b></div>
            <div class="tiempo">{{mensajes.fechapublicacion | date('Y-m-d') }}</div>
            <div class="dropdown show">
                <button class="opciones" href="#" role="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i id="puntitos" class="bi bi-three-dots"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                        <button class="dropdown-item" onclick="Eliminar({{mensajes.id}})">Eliminar</button>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </div>
        </div>
            <div class="texto">{{ mensajes.mensaje }} </div>
                {% if mensajes.imagen !="" %}
                    <div class="imagen" id="imagenclick">
                        <img data-bs-toggle="modal" data-bs-target="#Modalimg{{mensajes.id}}" src="uploads/img/{{mensajes.imagen}}" class="img_mensaje" />
                        <input type="text" value="uploads/img/{{mensajes.imagen}}" id="src" hidden>
                    </div>
                    {% include 'modals/modalimg.html.twig' %}
                {% endif %}
                <div class="interaccion">
                    <div class="interComen">
                        <i style="color:#9865C6" class="bi bi-chat"></i>
                    </div>
                   {% set likes = LikeUsuario(usuarioLogueado,mensajes.id) %}
                   {% if likes %}
                    <div class="interLike" onclick="QuitarLike({{mensajes.id}},{{usuarioLogueado}})">
                        <i style="color:#FCB7F8" class="bi bi-heart-fill"></i>{{LikesTotales(mensajes.id)}}
                    </div>
                    {% else %}
                    <div class="interLike" onclick="Like({{mensajes.id}},{{usuarioLogueado}})">
                        <i style="color:#FCB7F8" class="bi bi-heart"></i>{{LikesTotales(mensajes.id)}}
                    </div>
                    {% endif %}
                </div>
    </div>
    
</div>
{% endfor %}
<script src="js/img.js"></script>

  


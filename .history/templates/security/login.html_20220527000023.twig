{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="fullContainer">
<div class="formContainer">
<div class="enlaceRegistrarseContainer"><a class="enlaceRegistrarse" href="#" onclick="IrRegistrarse()">¡Regístrate aquí! ➡</a></div>
    <div class="login">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger" id="mensajeErrorLogin">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        
        <label for="inputEmail" class="labelLogin">LOGIN</label>
        <input type="email" class="inputLogin" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" required autofocus>
        <input type="password" class="inputLogin" name="password" id="inputPassword" placeholder="Contraseña" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="buttonLogin"  type="submit">
            Sign in
        </button>

    </form>
    </div>

</div>

</div>

{% endblock %}